<section class="horizontal-form">
  {{#if firstPage}}
    <div class="over-hr r-mb20">
      <span>credentials</span>
    </div>

    <div class="row">
      <div class="col-sm-12 col-md-2 form-label">
        <label class="form-control-static">API Key*</label>
      </div>
      <div class="col-sm-12 col-md-10">
        {{ input type="password" class="form-control" value=model.%%DRIVERNAME%%Config.apiKey placeholder="Your cloud.ca API Key"}}
      </div>
    </div>

    <div class="footer-actions">
      <button {{ action "nextPage" }} class="btn btn-primary" disabled={{not model.%%DRIVERNAME%%Config.apiKey}}>Next: Configure instance</button>
      <button {{ action "cancel" }} class="btn btn-link">{{ t "generic.cancel" }}</button>
    </div>
  {{else}}
    {{ partial "host/add-common" }}

    <div class="over-hr r-mt20 r-mb20">
      <span>deployment</span>
    </div>

    <div class="row form-group">
      <div class="col-sm-12 col-md-1 form-label">
        <label class="form-control-static">Environment</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{new-select
          class="form-control"
          content=environmentOptions
          optionLabelPath='name'
          optionValuePath='value'
          value=model.%%DRIVERNAME%%Config.environmentName
        }}
      </div>

      <div class="col-sm-12 col-md-1 form-label">
        <label class="form-control-static">Tier</label>
      </div>
      <div class="col-sm-12 col-md-3">
      {{new-select
        class="form-control"
        content=networkOptions
        optionLabelPath='name'
        optionValuePath='value'
        optionGroupPath='group'
        value=model.%%DRIVERNAME%%Config.networkId
      }}
      </div>
    </div>

    <div class="over-hr r-mt20 r-mb20">
      <span>instance</span>
    </div>

    <div class="row form-group">
      <div class="col-sm-12 col-md-1 form-label">
        <label class="form-control-static">Template</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{new-select
          class="form-control"
          content=templateOptions
          prompt='Select a template:'
          optionLabelPath='name'
          optionValuePath='value'
          optionGroupPath='group'
          value=model.%%DRIVERNAME%%Config.template
        }}
      </div>

      <div class="col-sm-12 col-md-1 form-label">
        <label class="form-control-static">SSH User</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{ input type="text" class="form-control" value=model.%%DRIVERNAME%%Config.sshUser }}
      </div>

      <div class="col-sm-12 col-md-1 form-label">
        <label class="form-control-static">Use Private IP</label>
      </div>
      <div class="col-sm-12 col-md-3 form-control-static">
        {{ input type="checkbox" checked=model.%%DRIVERNAME%%Config.usePrivateIp }}
      </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-12 col-md-1 form-label">
        <label class="form-control-static">Compute Offering</label>
      </div>
      <div class="col-sm-12 col-md-3">
         {{new-select
           class="form-control"
           content=computeOfferingOptions
           optionLabelPath='name'
           optionValuePath='value'
           value=model.%%DRIVERNAME%%Config.computeOffering
         }}
      </div>

      <div class="col-sm-12 col-md-1 form-label">
        <label class="form-control-static">vCPUs</label>
      </div>
      <div class="col-sm-12 col-md-3">
        {{ input type="text" class="form-control" value=model.%%DRIVERNAME%%Config.cpuCount }}
      </div>

      <div class="col-sm-12 col-md-1 form-label">
        <label class="form-control-static">RAM</label>
      </div>
      <div class="col-sm-12 col-md-3">
        <div class="input-group">
          {{ input type="text" class="form-control" value=model.%%DRIVERNAME%%Config.memoryMb }}
          <span class="input-group-addon">MB</span>
        </div>
      </div>
    </div>

    <div class="over-hr r-mt20 r-mb20">
      <span>storage</span>
    </div>

    <div class="row form-group">
      <div class="col-sm-12 col-md-1 form-label">
        <label class="form-control-static">Additional Disk (optional)</label>
      </div>
      <div class="col-sm-12 col-md-3">
         {{new-select
           class="form-control"
           content=diskOfferingOptions
           optionLabelPath='name'
           optionValuePath='value'
           value=model.%%DRIVERNAME%%Config.additionalDiskOffering
         }}
      </div>

      <div class="col-sm-12 col-md-1 form-label">
        <label class="form-control-static">Size</label>
      </div>
      <div class="col-sm-12 col-md-3">
        <div class="input-group">
          {{ input type="text" class="form-control" value=model.%%DRIVERNAME%%Config.additionalDiskSizeGb }}
          <span class="input-group-addon">GB</span>
        </div>
      </div>

      <div class="col-sm-12 col-md-1 form-label">
        <label class="form-control-static">Performance</label>
      </div>
      <div class="col-sm-12 col-md-3">
        <div class="input-group">
          {{ input type="text" class="form-control" value=model.%%DRIVERNAME%%Config.additionalDiskIops }}
          <span class="input-group-addon">IOPS</span>
        </div>
      </div>
    </div>

    {{ partial "host/add-options" }}
    {{ save-cancel save="save" cancel="cancel" }}
  {{/if}}

{{!-- This component shows errors produced by validate() in the component --}}
{{top-errors errors=errors}}
</section>
